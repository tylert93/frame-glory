                <div class="image">
                    <img class="img-fluid" src="/images/<%= item.tag %>.jpg" alt="Image 1">
                    <h3><%= item.name %></h3>
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="d-inline">Â£<%= item.price %></h4>
                        <span class="btn btn-sm btn-primary cartButtons" name="<%= item.name %>" tag="<%= item.tag %>" price="<%= item.price %>" inCart="<%= item.inCart %>">Add to cart</span>
                    </div>
                </div>
            </div>
        <% }) %>

    </div>

</div>

